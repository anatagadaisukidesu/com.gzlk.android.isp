<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="ui_view_image_displayer_icon_bar_margin">@dimen/ui_static_dp_5</dimen>

    <declare-styleable name="ImageDisplayer">
        <!--图片显示方式-->
        <attr name="id_image_type">
            <!--正常按原样显示-->
            <enum name="normal" value="0" />
            <!--圆形边角-->
            <enum name="rounded" value="1" />
            <!--圆形-->
            <enum name="oval" value="2" />
        </attr>
        <attr name="id_image_size" format="dimension" />
        <attr name="id_image_width" format="dimension" />
        <attr name="id_image_height" format="dimension" />
        <!--图片来源：资源-->
        <attr name="id_image_src" format="reference" />
        <!--是否是显示头像-->
        <attr name="id_show_header" format="boolean" />
        <!--图片来源：网址-->
        <attr name="id_image_url" format="string" />
        <!--删除按钮-->
        <attr name="id_delete_icon" format="string" />
        <!--是否显示删除按钮-->
        <attr name="id_show_delete" format="boolean" />
        <!--是选择按钮-->
        <attr name="id_select_icon" format="string" />
        <!--是否显示选择按钮-->
        <attr name="id_show_select" format="boolean" />
        <attr name="id_selected" format="boolean" />
        <attr name="id_show_loading" format="boolean" />
        <!--是否在资源或url都未设置的情况下显示空白-->
        <attr name="id_nullable_drawable" format="boolean" />
        <!--是否显示的大图-->
        <attr name="id_is_large_image" format="boolean" />
        <attr name="id_image_scale_type">
            <enum name="normalType" value="0" />
            <enum name="centerCrop" value="1" />
        </attr>
    </declare-styleable>
</resources>