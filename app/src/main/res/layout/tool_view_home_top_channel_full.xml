<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_tool_home_top_channel_full_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_base_dimen_button_height"
        android:background="@color/color_f5f7f9"
        android:paddingEnd="@dimen/ui_static_dp_zero"
        android:paddingStart="@dimen/ui_base_dimen_margin_padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/ui_text_home_top_channel_full" />

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_tool_home_top_channel_full_title_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent_60_white"
            android:clickable="true"
            android:gravity="center"
            android:paddingEnd="@dimen/ui_static_dp_16"
            android:paddingStart="@dimen/ui_static_dp_16"
            android:rotation="90"
            android:text="@string/ui_icon_left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <include layout="@layout/tool_view_recycler_view_horizontal" />
    </LinearLayout>

</LinearLayout>