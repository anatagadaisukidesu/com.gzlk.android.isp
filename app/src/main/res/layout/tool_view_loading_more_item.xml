<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_80_white"
    android:gravity="center"
    android:minHeight="35dp"
    android:orientation="horizontal">

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:id="@+id/ui_tool_view_loading_more_progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        app:mlpb_enable_circle_background="false"
        app:mlpb_progress_color="#566da9"
        app:mlpb_progress_stoke_width="2dp"
        app:mlpb_progress_text_visibility="invisible" />

    <TextView
        android:id="@+id/ui_tool_view_loading_more_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hlklib_text_refreshable_recycler_view_loading_more"
        android:textSize="12sp" />
</LinearLayout>