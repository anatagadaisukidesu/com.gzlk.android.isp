<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/ui_base_dimen_margin_padding">

    <include layout="@layout/holder_view_simple_clickable" />

    <include layout="@layout/tool_view_divider_big" />

    <LinearLayout
        android:id="@+id/ui_setting_messaging_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/holder_view_toggle" />
    </LinearLayout>

    <include layout="@layout/tool_view_half_line_horizontal" />

    <LinearLayout
        android:id="@+id/ui_setting_messaging_vibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/holder_view_toggle" />
    </LinearLayout>
</LinearLayout>