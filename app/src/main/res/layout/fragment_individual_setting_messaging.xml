<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
        android:background="@drawable/ui_background_login_item"
        android:translationZ="@dimen/ui_base_translationZ_small">

        <include layout="@layout/holder_view_simple_clickable" />
    </LinearLayout>

    <include layout="@layout/tool_view_divider_big" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_background_login_item"
        android:orientation="vertical"
        android:translationZ="@dimen/ui_base_translationZ_small">

        <LinearLayout
            android:id="@+id/ui_setting_messaging_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/holder_view_toggle" />
        </LinearLayout>

        <include layout="@layout/tool_view_half_line_horizontal" />

        <LinearLayout
            android:id="@+id/ui_setting_messaging_vibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/holder_view_toggle" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>