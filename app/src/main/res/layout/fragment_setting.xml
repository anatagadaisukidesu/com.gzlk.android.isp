<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/ui_base_dimen_margin_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_background_login_item"
        android:orientation="vertical"
        android:translationZ="@dimen/ui_static_dp_1">

        <include
            android:id="@+id/ui_setting_to_password"
            layout="@layout/holder_view_simple_clickable" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ui_base_dimen_margin_padding">

            <include layout="@layout/tool_view_half_line_horizontal" />
        </LinearLayout>

        <include
            android:id="@+id/ui_setting_to_messaging"
            layout="@layout/holder_view_simple_clickable" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ui_base_dimen_margin_padding">

            <include layout="@layout/tool_view_half_line_horizontal" />
        </LinearLayout>

        <include
            android:id="@+id/ui_setting_to_privacy"
            layout="@layout/holder_view_simple_clickable" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_base_dimen_margin_padding"
        android:background="@drawable/ui_background_login_item"
        android:orientation="vertical"
        android:translationZ="@dimen/ui_static_dp_1">

        <com.hlk.hlklib.lib.view.CorneredButton
            android:id="@+id/ui_setting_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:text="@string/ui_text_setting_sign_out"
            android:textSize="@dimen/ui_base_text_size_big"
            app:active_color="@color/buttonDialogActiveColor"
            app:normal_color="@color/buttonDialogNormalColor" />

    </LinearLayout>
</LinearLayout>