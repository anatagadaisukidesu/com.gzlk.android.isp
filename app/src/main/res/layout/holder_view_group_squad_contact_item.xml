<?xml version="1.0" encoding="utf-8"?>
<com.hlk.hlklib.lib.view.CorneredView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_holder_view_group_squad_contact_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ui_base_dimen_button_height"
    android:layout_marginBottom="@dimen/ui_base_border_size_normal"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:cv_background="@android:color/white"
    app:cv_background_active="@color/buttonDialogActiveColor"
    app:cv_background_type="fill"
    app:cv_border_size="@dimen/ui_static_dp_zero">

    <com.hlk.hlklib.lib.view.CustomTextView
        android:id="@+id/ui_holder_view_group_squad_contact_selector_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:minWidth="@dimen/ui_base_dimen_button_height"
        android:text="@string/ui_icon_checkbox_unchecked"
        android:textColor="@color/textColorHintLightLight" />

    <TextView
        android:id="@+id/ui_holder_view_group_squad_contact_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_static_dp_5"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name_default" />

    <LinearLayout
        android:id="@+id/ui_holder_view_group_squad_contact_select_all"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_holder_view_group_squad_contact_select_all_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/ui_static_dp_5"
            android:gravity="center_vertical"
            android:text="@string/ui_icon_select_line"
            android:textColor="@color/textColorHintLightLight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/ui_base_text_select_all"
            android:textColor="@color/textColorHintDark" />
    </LinearLayout>

    <com.hlk.hlklib.lib.view.CustomTextView
        android:id="@+id/ui_holder_view_group_squad_contact_lock_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        android:layout_marginStart="@dimen/ui_static_dp_5"
        android:text="@string/ui_icon_lock"
        android:textColor="@color/colorCaution"
        android:textSize="@dimen/ui_base_text_size_tiny"
        android:visibility="gone" />

    <com.hlk.hlklib.lib.view.CustomTextView
        android:id="@+id/ui_holder_view_group_squad_contact_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        android:layout_marginStart="@dimen/ui_base_dimen_margin_padding"
        android:animateLayoutChanges="true"
        android:text="@string/ui_icon_right"
        android:textColor="@color/textColorHint" />
</com.hlk.hlklib.lib.view.CorneredView>