<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ui_base_dimen_simple_item_height"
    android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/ui_holder_view_contact_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/ui_base_dimen_simple_item_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ui_tool_view_contact_button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_ff4141"
                android:gravity="center"
                android:padding="@dimen/ui_base_dimen_margin_padding"
                android:text="@string/ui_base_text_delete"
                android:textColor="@color/ui_text_normal_white"
                android:visibility="gone" />
        </LinearLayout>

        <include layout="@layout/holder_view_simple_clickable_gravity_left" />
    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>