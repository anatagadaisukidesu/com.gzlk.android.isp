<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/ui_static_dp_5">

    <com.hlk.hlklib.lib.view.ClearEditText
        android:id="@+id/ui_individual_moment_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:cet_edit_active_border="@color/textColorHintLight"
        app:cet_edit_maximum_height="@dimen/ui_static_dp_200"
        app:cet_edit_normal_border="@android:color/transparent"
        app:cet_edit_padding="@dimen/ui_base_dimen_margin_padding"
        app:cet_edit_corner_size="@dimen/ui_base_dimen_button_corner_size"
        app:cet_edit_max_lines="@integer/integer_dialog_text_max_lines"
        app:cet_edit_hint="@string/ui_individual_moment_comment_hint" />

</LinearLayout>