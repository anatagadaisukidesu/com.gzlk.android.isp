<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_holder_view_archive_security_setting_container_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingEnd="@dimen/ui_static_dp_zero"
    android:paddingStart="@dimen/ui_base_dimen_margin_padding">

    <LinearLayout
        android:id="@+id/ui_holder_view_archive_security_setting_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_base_dimen_button_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_holder_view_archive_security_setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
            android:gravity="center"
            android:text="@string/ui_icon_choose"
            android:textColor="@color/textColorHintLightLight" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ui_holder_view_archive_security_setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/ui_holder_view_archive_security_setting_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/textColorHintLight"
                android:textSize="@dimen/ui_base_text_size_little" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_base_border_size_normal"
        android:background="@color/textColorHintLight" />
</LinearLayout>