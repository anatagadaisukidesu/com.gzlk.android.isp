<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ui_base_dimen_margin_padding"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/tool_view_collection_creator" />

    <include layout="@layout/tool_view_collection_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/ui_base_dimen_margin_padding"
        android:paddingEnd="@dimen/ui_base_dimen_margin_padding"
        android:paddingStart="@dimen/ui_base_dimen_margin_padding">

        <com.hlk.hlklib.lib.view.CorneredButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ui_static_dp_5"
            android:paddingEnd="@dimen/ui_base_dimen_margin_padding"
            android:paddingStart="@dimen/ui_base_dimen_margin_padding"
            android:paddingTop="@dimen/ui_static_dp_5"
            android:text="@string/ui_base_text_label"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_base_text_size_little"
            app:active_color="@color/textColorHintLight"
            app:background_type="border"
            app:corner_size="@dimen/ui_static_dp_10"
            app:normal_color="@color/textColorHintLight" />
    </LinearLayout>
</LinearLayout>