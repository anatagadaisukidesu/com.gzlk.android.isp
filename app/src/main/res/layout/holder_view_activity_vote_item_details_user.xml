<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ui_holder_view_activity_vote_item_user_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/ui_static_dp_5">

    <com.gzlk.android.isp.lib.view.ImageDisplayer
        android:id="@+id/ui_holder_view_activity_vote_item_user_header"
        android:layout_width="@dimen/ui_base_user_header_image_size"
        android:layout_height="@dimen/ui_base_user_header_image_size"
        app:id_image_src="@mipmap/img_default_user_header"
        app:id_image_type="oval"
        app:id_show_header="true" />

    <TextView
        android:id="@+id/ui_holder_view_activity_vote_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name_default"
        android:textSize="@dimen/ui_base_text_size_small" />
</LinearLayout>