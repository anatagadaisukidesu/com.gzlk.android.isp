<?xml version="1.0" encoding="utf-8"?>
<com.hlk.hlklib.lib.view.CorneredView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/ui_static_dp_15"
    android:layout_marginRight="@dimen/ui_static_dp_15"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:cv_border_size="0dp"
    app:cv_corner_size="@dimen/ui_base_dimen_margin_padding">

    <TextView
        android:id="@+id/ui_custom_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ui_static_dp_15"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="5"
        android:minHeight="@dimen/ui_static_dp_50"
        android:text="@string/app_name" />

    <include layout="@layout/popup_dialog_default_buttons" />

</com.hlk.hlklib.lib.view.CorneredView>