<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_tool_home_top_channel_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ui_base_dimen_button_height"
    android:background="@color/color_f5f7f9"
    android:clickable="true"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/ui_tool_home_top_channel_button"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/ui_tool_home_top_channel_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ui_text_home_top_channel_1" />

        <TextView
            android:id="@+id/ui_tool_home_top_channel_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ui_text_home_top_channel_2"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/ui_tool_home_top_channel_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ui_text_home_top_channel_3"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/ui_tool_home_top_channel_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ui_text_home_top_channel_4"
            android:visibility="gone" />
    </LinearLayout>

    <com.hlk.hlklib.lib.view.CustomTextView
        android:id="@+id/ui_tool_home_top_channel_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:gravity="center"
        android:paddingEnd="@dimen/ui_static_dp_16"
        android:paddingStart="@dimen/ui_static_dp_16"
        android:rotation="-90"
        android:text="@string/ui_icon_left"
        android:visibility="gone" />
</RelativeLayout>