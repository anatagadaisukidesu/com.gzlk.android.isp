<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_tool_moment_item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/ui_static_dp_40"
    android:orientation="horizontal">

    <include
        android:id="@+id/ui_tool_moment_item_content_images"
        layout="@layout/tool_view_image_merge_4"
        android:layout_width="@dimen/ui_individual_moment_content_size"
        android:layout_height="@dimen/ui_individual_moment_content_size" />

    <TextView
        android:id="@+id/ui_tool_moment_item_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ui_tool_moment_item_content_images"
        android:ellipsize="end"
        android:maxLines="3"
        android:minHeight="@dimen/ui_static_dp_40"
        android:paddingEnd="@dimen/ui_static_dp_5"
        android:paddingStart="@dimen/ui_static_dp_5"
        android:textSize="@dimen/ui_base_text_size_small" />

    <TextView
        android:id="@+id/ui_tool_moment_item_content_image_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ui_tool_moment_item_content_images"
        android:layout_marginStart="@dimen/ui_static_dp_5"
        android:layout_toEndOf="@+id/ui_tool_moment_item_content_images"
        android:text="@string/app_name"
        android:textColor="@color/textColorHint"
        android:textSize="@dimen/ui_base_text_size_little" />

    <include
        android:id="@+id/ui_tool_moment_item_content_image_progress"
        layout="@layout/tool_view_horizontal_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ui_tool_moment_item_content_images"
        android:layout_marginStart="@dimen/ui_static_dp_5"
        android:layout_toEndOf="@+id/ui_tool_moment_item_content_image_count" />
</RelativeLayout>