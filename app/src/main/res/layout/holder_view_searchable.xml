<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ui_base_dimen_button_height"
    android:gravity="center_vertical"
    android:paddingEnd="@dimen/ui_base_dimen_margin_padding"
    android:paddingStart="@dimen/ui_base_dimen_margin_padding">

    <com.hlk.hlklib.lib.view.CorneredEditText
        android:id="@+id/ui_holder_view_searchable_input"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="@string/ui_base_text_search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:paddingEnd="@dimen/ui_static_dp_33"
        android:paddingStart="@dimen/ui_static_dp_15"
        android:singleLine="true"
        android:textColorHint="@color/textColorHint"
        app:cet_border_size="0dp"
        app:cet_corner_size="@dimen/ui_base_dimen_button_corner_size"
        app:cet_max_length="10" />

    <com.hlk.hlklib.lib.view.CustomTextView
        android:id="@+id/ui_holder_view_searchable_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/ui_static_dp_15"
        android:text="@string/ui_icon_search"
        android:textColor="@color/textColorHintDark" />

</RelativeLayout>