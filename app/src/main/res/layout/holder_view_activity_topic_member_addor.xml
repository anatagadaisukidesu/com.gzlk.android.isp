<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_holder_view_activity_topic_member_attach_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="@dimen/ui_static_dp_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/ui_base_user_header_image_size"
        android:layout_height="@dimen/ui_base_user_header_image_size"
        android:background="@drawable/ui_background_oval_primary"
        android:padding="@dimen/ui_base_border_size_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ui_background_oval_white"
            android:gravity="center">

            <com.hlk.hlklib.lib.view.CustomTextView
                android:id="@+id/ui_holder_view_activity_topic_member_attach_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:text="@string/ui_icon_add"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/ui_base_text_size_huge" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/ui_holder_view_activity_topic_member_attach_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_static_dp_3"
        android:text="@string/ui_phone_contact_invite"
        android:textSize="@dimen/ui_base_text_size_small" />
</LinearLayout>