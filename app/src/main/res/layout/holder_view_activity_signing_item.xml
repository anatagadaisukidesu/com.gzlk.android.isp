<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ui_base_border_size_normal"
    android:orientation="vertical">

    <com.hlk.hlklib.lib.view.CorneredView
        android:id="@+id/ui_holder_view_activity_signing_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/ui_static_dp_5"
        app:cv_active_border="@color/colorPrimary"
        app:cv_background="@android:color/white"
        app:cv_background_active="@android:color/white"
        app:cv_background_type="border"
        app:cv_border_size="@dimen/ui_base_border_size_normal"
        app:cv_normal_border="@android:color/white">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_holder_view_activity_signing_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_static_dp_5"
            android:text="@string/ui_icon_location"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_base_text_size_huge" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ui_holder_view_activity_signing_item_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name_default" />

                <TextView
                    android:id="@+id/ui_holder_view_activity_signing_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name_default"
                    android:textColor="@color/textColorHint"
                    android:textSize="@dimen/ui_base_text_size_small" />
            </LinearLayout>

            <TextView
                android:id="@+id/ui_holder_view_activity_signing_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@string/app_name_default"
                android:textColor="@color/textColorHint"
                android:textSize="@dimen/ui_base_text_size_small" />
        </LinearLayout>

        <com.hlk.hlklib.lib.view.CustomTextView
            android:id="@+id/ui_holder_view_activity_signing_item_icon_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ui_static_dp_5"
            android:text="@string/ui_icon_right"
            android:textColor="@color/textColorHint" />

    </com.hlk.hlklib.lib.view.CorneredView>
</LinearLayout>