<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <include layout="@layout/tool_view_view_pager" />

    <com.gzlk.android.isp.lib.view.ExpandableTextView
        android:id="@+id/ui_moment_detail_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:ellipsize="end"
        android:maxLines="8"
        android:padding="@dimen/ui_base_dimen_margin_padding"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ui_base_text_size_small"
        app:lessText="@string/ui_base_text_collapse"
        app:maxLines="3"
        app:moreText="@string/ui_base_text_expand" />

    <LinearLayout
        android:id="@+id/ui_moment_details_downloading_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/tool_view_horizontal_progressbar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui_moment_details_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/colorPrimary">

        <include layout="@layout/tool_view_moment_details_title" />
    </LinearLayout>

</RelativeLayout>