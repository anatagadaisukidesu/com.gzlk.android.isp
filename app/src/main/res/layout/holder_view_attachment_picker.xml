<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ui_base_border_size_normal"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:minHeight="@dimen/ui_base_dimen_simple_item_height"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/ui_holder_view_attachment_picker_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_static_dp_20"
            android:gravity="center_vertical"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:orientation="horizontal">

            <com.hlk.hlklib.lib.view.CustomTextView
                android:id="@+id/ui_holder_view_attachment_picker_image_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ui_static_dp_5"
                android:text="@string/ui_icon_select_line"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ui_base_text_image" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ui_holder_view_attachment_picker_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ui_static_dp_20"
            android:gravity="center_vertical"
            android:minHeight="@dimen/ui_base_dimen_button_height"
            android:orientation="horizontal">

            <com.hlk.hlklib.lib.view.CustomTextView
                android:id="@+id/ui_holder_view_attachment_picker_other_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ui_static_dp_5"
                android:text="@string/ui_icon_select_line"
                android:textColor="@color/textColorHintLight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ui_base_text_other" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <com.hlk.hlklib.lib.view.CorneredView
        android:id="@+id/ui_tool_attachment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_base_dimen_margin_padding"
        android:gravity="center"
        android:minHeight="@dimen/ui_static_dp_35"
        android:minWidth="@dimen/ui_static_dp_60"
        android:paddingBottom="@dimen/ui_static_dp_3"
        android:paddingTop="@dimen/ui_static_dp_3"
        app:cv_active_border="@color/colorAccent"
        app:cv_corner_size="@dimen/ui_static_dp_5"
        app:cv_normal_border="@color/colorPrimary">

        <com.hlk.hlklib.lib.view.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ui_icon_attachment"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/ui_base_text_size_big" />
    </com.hlk.hlklib.lib.view.CorneredView>
</LinearLayout>